@page
@model WebApplication2.Pages.FanetModel

<!DOCTYPE html>
<html>
<head>
    <title>FANET</title>
</head>
<body>
    <h1>FANET UAV List</h1>

    <h3>Current UAVs:</h3>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>X</th>
                <th>Y</th>
                <th>Z</th>
                <th>Speed</th>
                <th>Mission Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var uav in Model.UAVs)
            {
                <tr>
                    <td>@uav.Id</td>
                    <td>@uav.X</td>
                    <td>@uav.Y</td>
                    <td>@uav.Z</td>
                    <td>@uav.Speed</td>
                    <td>@uav.MissionType</td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Add a new UAV:</h3>
    <form method="post">
        <label for="Id">ID:</label>
        <input type="text" name="Id" required /><br />

        <label for="X">X Position:</label>
        <input type="text" name="X" required /><br />

        <label for="Y">Y Position:</label>
        <input type="text" name="Y" required /><br />

        <label for="Z">Z Position:</label>
        <input type="text" name="Z" required /><br />

        <label for="Speed">Speed:</label>
        <input type="text" name="Speed" required /><br />

        <label for="MissionType">Mission Type:</label>
        <input type="text" name="MissionType" required /><br />

        <input type="submit" value="Add UAV" />
    </form>
</body>
</html>
